{
  "$schema": "https://biomejs.dev/schemas/2.3.5/schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on",
        "useSortedAttributes": "off",
        "useSortedKeys": "off",
        "useSortedProperties": "off"
      }
    }
  },
  "files": {
    "ignoreUnknown": true,
    "includes": ["**", "!dist", "!node_modules"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 180,
    "lineEnding": "crlf"
  },
  "javascript": {
    "formatter": {
      "attributePosition": "multiline",
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "jsxQuoteStyle": "double",
      "lineWidth": 180,
      "quoteProperties": "asNeeded",
      "quoteStyle": "single",
      "trailingCommas": "all",
      "lineEnding": "crlf"
    }
  },
  "json": {
    "formatter": {
      "enabled": true,
      "lineWidth": 180
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "a11y": {
        "useMediaCaption": "off",
        "noStaticElementInteractions": "off",
        "useKeyWithClickEvents": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off",
        "useUniqueElementIds": "off"
      },
      "suspicious": {
        "noAssignInExpressions": "off"
      },
      "recommended": true,
      "style": {
        "useImportType": "off"
      }
    }
  },
  "vcs": {
    "clientKind": "git",
    "enabled": false,
    "useIgnoreFile": false
  }
}
